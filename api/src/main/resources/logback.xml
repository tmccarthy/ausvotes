<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <layout class="ch.qos.logback.classic.PatternLayout">
      <pattern>
        %d{yyyy-MM-dd HH:mm:ss} level=%-5level %replace(%msg){'\n','\r'} \r%replace(%ex){'\n','\r'}%nopex%n
      </pattern>
    </layout>
  </appender>

  <logger name="au.id.tmm" level="trace">
    <appender-ref ref="STDOUT" />
  </logger>

  <root level="error">
    <appender-ref ref="STDOUT" />
  </root>

</configuration>
